# CryptoSignal News - Environment Variables
# Copy this file to .env and fill in your values

# Server
ENV=development
PORT=8080
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=postgres://cryptonews:YOUR_SECURE_PASSWORD@localhost:5432/cryptonews?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# Fetcher (seconds between RSS fetches)
FETCH_INTERVAL=180

# AI - Get your free API key at https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Auth
JWT_SECRET=generate_a_random_32_char_string
